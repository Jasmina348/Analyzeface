<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/result_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_gender_male"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/rl_paddingleft"
                    android:paddingTop="@dimen/rl_paddingtop"
                    android:paddingRight="@dimen/rl_paddingright"
                    android:paddingBottom="@dimen/rl_paddingtbottom">

                    <ImageView
                        android:id="@+id/iv_gender_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_male" />

                    <TextView
                        android:id="@+id/tv_gender_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_gender_male"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="male" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_gender_female"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/rl_paddingleft"
                    android:paddingTop="@dimen/rl_paddingtop"
                    android:paddingRight="@dimen/rl_paddingright"
                    android:paddingBottom="@dimen/rl_paddingtbottom">

                    <ImageView
                        android:id="@+id/iv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_female" />

                    <TextView
                        android:id="@+id/tv_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_gender"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="female" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/rl_paddingleft"
                    android:paddingTop="@dimen/rl_paddingtop"
                    android:paddingRight="@dimen/rl_paddingright"
                    android:paddingBottom="@dimen/rl_paddingtbottom">

                    <ImageView
                        android:id="@+id/iv_agerange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_age_range" />

                    <TextView
                        android:id="@+id/tv_agerange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_agerange"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="20-30" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/rl_paddingleft"
                    android:paddingTop="@dimen/rl_paddingtop"
                    android:paddingRight="@dimen/rl_paddingright"
                    android:paddingBottom="@dimen/rl_paddingtbottom">

                    <ImageView
                        android:id="@+id/iv_beard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_beard" />

                    <TextView
                        android:id="@+id/tv_beard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_beard"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="beard" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/rl_paddingleft"
                    android:paddingTop="@dimen/rl_paddingtop"
                    android:paddingRight="@dimen/rl_paddingright"
                    android:paddingBottom="@dimen/rl_paddingtbottom">

                    <ImageView
                        android:id="@+id/iv_moustache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_mustache" />

                    <TextView
                        android:id="@+id/tv_moustache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_moustache"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="moustache" />
                </RelativeLayout>
            </TableRow>
        </LinearLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rl_paddingleft"
            android:paddingTop="@dimen/rl_paddingtop"
            android:paddingRight="@dimen/rl_paddingright"
            android:paddingBottom="@dimen/rl_paddingtbottom">

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/ic_eye_open" />

            <TextView
                android:id="@+id/tv_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_eye"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="male" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rl_paddingleft"
            android:paddingTop="@dimen/rl_paddingtop"
            android:paddingRight="@dimen/rl_paddingright"
            android:paddingBottom="@dimen/rl_paddingtbottom">

            <ImageView
                android:id="@+id/iv_sunglass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/ic_sunglass" />

            <TextView
                android:id="@+id/tv_sunglass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_sunglass"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="eye open" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rl_paddingleft"
            android:paddingTop="@dimen/rl_paddingtop"
            android:paddingRight="@dimen/rl_paddingright"
            android:paddingBottom="@dimen/rl_paddingtbottom">

            <ImageView
                android:id="@+id/iv_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/ic_mouth_open" />

            <TextView
                android:id="@+id/tv_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_mouth"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="male" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rl_paddingleft"
            android:paddingTop="@dimen/rl_paddingtop"
            android:paddingRight="@dimen/rl_paddingright"
            android:paddingBottom="@dimen/rl_paddingtbottom">

            <ImageView
                android:id="@+id/iv_smiling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/ic_smiling" />

            <TextView
                android:id="@+id/tv_smiling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_smiling"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="male" />
        </RelativeLayout>
    </TableRow>

    <include
        android:id="@+id/iemotion"
        layout="@layout/emotion_layout" />

</LinearLayout>

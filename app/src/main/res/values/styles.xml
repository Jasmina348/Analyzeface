<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:itemTextAppearance">@color/text_color</item>-->
<!--        <item name="actionMenuTextColor">@color/text_color</item>-->

        <!--<item name="android:windowContentOverlay">@color/colorPrimaryDark</item>-->
    </style>
    <style name="MainScrollView">
        <item name="android:scrollbarThumbHorizontal">@android:color/transparent</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_layout_margin</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>
    <style name="action_bar_text">
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>
